{% extends 'main/default.html.twig' %}
{% block title %}Просмотр фотографии{% endblock %}
{% block body %}
    <section class="section">
        <div class="container">
            <h1 class="pb-4">Просмотр фотографии</h1>
            <table class="table is-striped is-bordered is-fullwidth">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Фотографии</th>
                </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ gallery.id }}</td>
                        <td><img class="image is-128x128" src="{{ asset('uploads/post/') }}{{ gallery.namePhoto }}" alt=""></td>
                    </tr>
                </tbody>
            </table>
            <div class="is-flex is-align-items-center pb-4">
                <a href="{{ path('gallery_index') }}"><button class="button is-info is-hovered mr-4">Вернуться</button></a>

                <a href="{{ path('gallery_edit', {'id': gallery.id}) }}"><button class="button is-info is-hovered">Редактирование</button></a>
            </div>
            {{ include('gallery/_delete_form.html.twig') }}
        </div>
    </section>
{% endblock %}
