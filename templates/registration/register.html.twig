<div class="page-content pt-4 pb-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-details page-login mt-4">
                    <h1 class="mb-3 text-center">Регистрация пользователя</h1>
                </div>
                {{ form_start(registrationForm) }}

                <div class="form-group pb-2">
                    {{ form_row(registrationForm.login, {
                        label: "Логин"
                    }) }}
                </div>

                <div class="form-group pb-2">
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Пароль'
                    }) }}
                </div>
                <div class="form-footer pb-4">
                    <div class="row">
                        <div class="col-lg-5 ">
                            <button type="submit" class="btn btn-success">Зарегистрироваться</button>
                            {{ form_row(registrationForm.agreeTerms) }}
                        </div>
                    </div>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
